  "uid": "app-observability",
  "title": "Application Observability",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Requests per Second by Endpoint",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (endpoint) (rate(app_requests_total[1m]))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
    },
    {
      "id": 2,
      "type": "gauge",
      "title": "Active Users",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "app_current_users"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "95th Percentile Response Time",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(app_response_time_seconds_bucket[5m])))",
          "legendFormat": "p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Error Rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(app_requests_total{status=\"error\"}[5m])) / sum(rate(app_requests_total[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2
        }
      },
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 6 }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}

