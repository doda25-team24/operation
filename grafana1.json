{
  "uid": "app-observability",
  "title": "Application Monitoring",
  "timezone": "browser"
  "schemaVersion": 38,
  "version": 2,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "endpoint",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(app_requests_total, endpoint)",
        "refresh": 1,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "text": "All",
          "value": ".*"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Request Rate (RPS)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(app_requests_total{endpoint=~\"$endpoint\"}[1m]))",
          "legendFormat": "Requests/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "decimals": 2
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 7 }
    },
    {
      "id": 2,
      "type": "gauge",
      "title": "Active Users",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "app_current_users"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 7, "w": 8, "h": 7 }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Error Rate (%)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(app_requests_total{status=\"error\"}[5m])) / sum(rate(app_requests_total[5m])) * 100"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      },
      "gridPos": { "x": 8, "y": 7, "w": 8, "h": 7 }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "P95 Latency",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(app_response_time_seconds_bucket{endpoint=~\"$endpoint\"}[5m])))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3
        }
      },
      "gridPos": { "x": 16, "y": 7, "w": 8, "h": 7 }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Latency Distribution (p50 / p95 / p99)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le) (rate(app_response_time_seconds_bucket{endpoint=~\"$endpoint\"}[5m])))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le) (rate(app_response_time_seconds_bucket{endpoint=~\"$endpoint\"}[5m])))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(app_response_time_seconds_bucket{endpoint=~\"$endpoint\"}[5m])))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": { "x": 0, "y": 14, "w": 24, "h": 8 }
    }
  ],
  "time": {
    "from": "now-30m",
    "to": "now"
  }
}

