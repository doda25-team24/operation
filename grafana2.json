{
  "uid": "decision-support",
  "title": "Decision Support Dashboard",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "type": "barchart",
      "title": "Requests per Endpoint (Last 1h)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (endpoint) (increase(app_requests_total[1h]))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Average Response Time by Endpoint",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "avg by (endpoint) (rate(app_response_time_seconds_sum[5m]) / rate(app_response_time_seconds_count[5m]))",
          "legendFormat": "{{endpoint}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Concurrent Users Over Time",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "app_current_users",
          "legendFormat": "Active Users"
        }
      ],
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "99th Percentile Latency (SLA)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum by (le) (rate(app_response_time_seconds_bucket[5m])))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 3
        }
      },
      "gridPos": { "x": 0, "y": 24, "w": 24, "h": 6 }
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  }
}


